  "testingWorkflow": {
    "step1": "Start GIP simulator on port 4001",
    "step2": "Start Orchestrator on port 3002",
    "step3": "Test NEC first: POST /test/nec",
    "step4": "If NEC works, test FT: POST /test/ft",
    "step5": "Check FT status: GET /test/status/:instanceId",
    "step6": "View recent transactions: GET /test/recent"
  }
}
