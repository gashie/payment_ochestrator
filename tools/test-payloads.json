{
  "baseUrl": "http://localhost:3002/api/v1",

  "nec": {
    "description": "NEC (Name Enquiry Check) - Synchronous call to verify account",
    "endpoint": "POST /test/nec",
    "payloads": {
      "minimal": {},
      "basic": {
        "destAccountNumber": "0246089019",
        "destBankCode": "300315"
      },
      "full": {
        "sessionId": "260201120000001",
        "trackingNumber": "NEC20260201001",
        "srcBankCode": "300300",
        "destBankCode": "300315",
        "srcAccountNumber": "0246089019",
        "destAccountNumber": "0246089019",
        "channelCode": "100",
        "narration": "Name Enquiry Test"
      }
    },
    "curlExamples": {
      "minimal": "curl -X POST http://localhost:3002/api/v1/test/nec -H \"Content-Type: application/json\" -d \"{}\"",
      "withAccount": "curl -X POST http://localhost:3002/api/v1/test/nec -H \"Content-Type: application/json\" -d \"{\\\"destAccountNumber\\\": \\\"0246089019\\\", \\\"destBankCode\\\": \\\"300315\\\"}\""
    },
    "expectedResponse": {
      "success": true,
      "data": {
        "status": "COMPLETED",
        "result": {
          "actionCode": "000",
          "approvalCode": "206901",
          "nameToCredit": "ENOCH DANSO CLINTON",
          "accountToCredit": "0246089019",
          "functionCode": "230"
        }
      }
    }
  },

  "ft": {
    "description": "FT (Funds Transfer) - Asynchronous call, returns immediately",
    "endpoint": "POST /test/ft",
    "payloads": {
      "minimal": {
        "amount": 100
      },
      "basic": {
        "srcAccountNumber": "0011010104334",
        "destAccountNumber": "0246436671",
        "amount": 500
      },
      "full": {
        "sessionId": "260201130000001",
        "trackingNumber": "FT20260201001",
        "srcBankCode": "300307",
        "destBankCode": "300591",
        "srcAccountNumber": "0011010104334",
        "srcAccountName": "FAUTINA ABDULAI",
        "destAccountNumber": "0246436671",
        "destAccountName": "KWAKU MANU",
        "amount": 1000,
        "channelCode": "100",
        "narration": "Test Transfer Payment"
      }
    },
    "curlExamples": {
      "minimal": "curl -X POST http://localhost:3002/api/v1/test/ft -H \"Content-Type: application/json\" -d \"{\\\"amount\\\": 100}\"",
      "full": "curl -X POST http://localhost:3002/api/v1/test/ft -H \"Content-Type: application/json\" -d \"{\\\"srcAccountNumber\\\": \\\"0011010104334\\\", \\\"destAccountNumber\\\": \\\"0246436671\\\", \\\"amount\\\": 500}\""
    },
    "expectedResponse": {
      "success": true,
      "data": {
        "flowInstanceId": "uuid-here",
        "sessionId": "260201130000001",
        "status": "ACCEPTED",
        "note": "Use GET /api/v1/test/status/:instanceId to check progress"
      }
    }
  },

  "ftSync": {
    "description": "FT Sync - Same as FT but waits for flow execution (useful for debugging)",
    "endpoint": "POST /test/ft-sync",
    "payloads": {
      "minimal": {
        "amount": 100
      }
    },
    "curlExample": "curl -X POST http://localhost:3002/api/v1/test/ft-sync -H \"Content-Type: application/json\" -d \"{\\\"amount\\\": 100}\""
  },

  "statusCheck": {
    "description": "Check transaction status by flow instance ID",
    "endpoint": "GET /test/status/:instanceId",
    "curlExample": "curl http://localhost:3002/api/v1/test/status/{flowInstanceId}"
  },

  "samplePayloads": {
    "description": "Get auto-generated sample payloads with current timestamps",
    "endpoint": "GET /test/payloads",
    "curlExample": "curl http://localhost:3002/api/v1/test/payloads"
  },

  "recentTests": {
    "description": "List recent test transactions",
    "endpoint": "GET /test/recent",
    "curlExample": "curl http://localhost:3002/api/v1/test/recent?limit=10"
  },

